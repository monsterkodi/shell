body
    background-color: color.gray-dark
    margin:           0px
    padding:          16px

input
    font-size:        24px
    width:            100%
    padding-left:     6px
    box-sizing:       border-box
    background-color: color.gray-very-dark
    color:            color.orange
    border-radius:    4px
    border:           1px solid color.black
    -webkit-transition:  all 0.30s ease-in-out
    -moz-transition:     all 0.30s ease-in-out

    &:focus
        background-color:   color.gray-very-dark
        border:   1px solid color.orange-bright
        box-shadow: 0 0 5px color.orange-bright
        outline:    none

.border
    border:        1px solid color.gray-very-dark
    padding:       10px
    border-radius: 10px
    margin-bottom: 12px
    box-shadow: inset 2px 2px 17px rgba(0, 0, 0, 0.25)
